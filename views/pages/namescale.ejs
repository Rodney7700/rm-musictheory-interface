          <fieldset class="fieldset--solidgold">
            <legend class="form__legend">Choose Enharmonic Preference:</legend>
              <div class="input__note--orienthorz">
                <input type="radio" name="enharmonic" id="sharp" value="sharp" checked />
                <label class="form__label" for="sharp">(&#9839;) Sharps</label>
              </div>

              <div class="input__note--orienthorz">
                <input type="radio" name="enharmonic" id="flat" value="flat" />
                <label class="form__label" for="flat">(&#9837;) Flats</label>
              </div>                              
          </fieldset>
          
          <div class="u-margin-top-small u-margin-bottom-small">
